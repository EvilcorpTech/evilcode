{
    "extends": "./strict.json",
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "declaration": true,
        "downlevelIteration": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": ["esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitHelpers": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "esnext"
    }
}
