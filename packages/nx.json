{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targets": {
        "build": {
            "outputs": [
                "{projectRoot}/**/*.css",
                "{projectRoot}/**/*.d.ts",
                "{projectRoot}/**/*.js"
            ]
        }
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build"]
            }
        }
    }
}
