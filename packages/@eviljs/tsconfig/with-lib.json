{
    "include": ["${configDir}/ts/**/*.ts"],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "incremental": true,
        "isolatedDeclarations": true,
        "module": "nodenext",
        "moduleDetection": "auto",
        "moduleResolution": "nodenext",
        "noErrorTruncation": true,
        "outDir": "${configDir}/esm",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "esnext"
    }
}
