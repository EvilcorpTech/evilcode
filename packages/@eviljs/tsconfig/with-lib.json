{
    "include": [
        "${configDir}/ts/**/*.ts",
        "${configDir}/ts/**/*.cts",
        "${configDir}/ts/**/*.mts",
        "${configDir}/ts/**/*.tsx"
    ],
    "compilerOptions": {
        "baseUrl": "./ts",
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "incremental": true,
        "isolatedDeclarations": true,
        "module": "nodenext",
        "moduleDetection": "auto",
        "moduleResolution": "nodenext",
        "noErrorTruncation": true,
        "outDir": "${configDir}/esm",
        "rootDir": "${configDir}/ts",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "esnext",
        "tsBuildInfoFile": "${configDir}/node_modules/.cache/tsbuildinfo"
    }
}
